<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    

    <style name="SpinnerItemStyleWhite" parent="@android:style/Widget.Holo.DropDownItem.Spinner" >
        <item name="android:textColor" >@color/white </item>
        <item name="android:textSize" >@dimen/font_size_spinner</item>
    </style>

    <style name="SpinnerItemStyleBlack" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textSize" >@dimen/font_size_spinner</item>
    </style>

</resources>